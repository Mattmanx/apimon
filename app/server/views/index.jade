extends base

block content
    // Wrapper
    #wrapper
        h1= title
            h2 API Info
            #apiInfo
                .pure-g
                    .pure-u-1-8.padtop
                        strong URL:
                    .pure-u-7-8.padtop
                        | #{apiUrl}
                    .pure-u-1-8.padtop
                        strong Method:
                    .pure-u-7-8.padtop
                        | #{apiMethod}
                    .pure-u-1-8.padtop
                        strong Timeout:
                    .pure-u-7-8.padtop
                        | #{apiTimeout}

            // History
            h2 History
            #resultList
                table.pure-table-striped
                    thead
                        th Date
                        th Result
                        th Message
                    tbody
            // /USER LIST

    // /WRAPPER